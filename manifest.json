{
  "manifest_version": 2,
  "name": "Alt-D Smart Fix",
  "description": "Polish any highlighted text with Alt+A using Groq LLMs (GPT-OSS 120B, Qwen3, DeepSeek, Kimi, or Compound).",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "activeTab",
    "https://api.groq.com/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "fix-selection": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Send the current selection to Groq for polishing"
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Alt-D Smart Fix",
    "default_popup": "src/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "altd-smart-fix@melancholic-ksm.github.io",
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": []
      }
    }
  }
}